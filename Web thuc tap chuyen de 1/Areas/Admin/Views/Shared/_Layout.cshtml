                <li><a href="@Url.Action("Index", "Slides")">Quản lý slide</a></li>
                <li><a href="@Url.Action("Index", "DanhMucSachs")">Quản lý danh mục sách</a></li>

            </ul>
        </div>
        <div class="logout_button">
            @Html.ActionLink("Logout", "Logout", "Home", new { Area = "" }, new { @class = "Logout" })
        </div>
        >


        @RenderBody()


        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    </body>
    </html>