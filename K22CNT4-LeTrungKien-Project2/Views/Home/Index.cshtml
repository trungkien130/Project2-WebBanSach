            </div>
        </div>

        <!--Slide -->

        <div class="swiper-container">
            <div class="swiper-wrapper">
                @foreach (var slide in Model.Slides)
                {
                    <div class="swiper-slide">
                        <article class="item_slide">
                            <a class="item_slide_span" href="" title="@slide.Title">
                                <img src="~/Img/@slide.Img" alt="@slide.Title">
                            </a>
                            <div class="content_blog_slide">
                                <h3><a href="" class="a-title">@slide.Title</a></h3>
                            </div>
                        </article>
                    </div>
                }

            </div>
        </div>
    </div>
    </div>

<div class="book-new">
    <div class="title-modul">
        <p>Sách  </p>
    </div>
    <div class="book-container">
        @foreach (var book in Model.Books)
        {
            <div class="book-card">
                <a href="@Url.Action("BookDetail", "Home", new { id = book.MaSach })" style="text-decoration: none; color: inherit;">
                    <img src="@Url.Content("~/Img/" + book.Img)" alt="@book.TenSach" />

                    <div class="buy-button">
                        <i class="fa-solid fa-bag-shopping"></i>
                        <button class="btn-buy">Buy Now</button>
                    </div>
                    <div class="book-details">
                        <h3 class="book-title">@book.TenSach</h3>
                        <p class="book-price">@String.Format("{0:N0} VNĐ", book.DonGia)</p>
                    </div>
                </a>
            </div>
        }
    </div>


</div>

